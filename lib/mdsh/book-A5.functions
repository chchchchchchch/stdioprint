  ICC="$INCLUDEPATH/../lib/icc/FOGRA39L.icc"

  pdfxrequired() {

   # PDF/X COMPLIANCY
   # ---------------- #
     echo "\usepackage[x-1a]{pdfx}"                     >> ${TMPID}.preamble
